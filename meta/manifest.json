{
  "name": "iCloud Passwords",
  "version": "1.0.2",
  "description": "iCloud Passwords lets you fill passwords from iCloud Keychain when signing in to websites using Firefox.",
  "author": "Aur√©lien Garnier",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./images/PasswordsToolbar_icon16.png",
      "32": "./images/PasswordsToolbar_icon32.png"
    },
    "default_popup": "./popup.html"
  },
  "icons": {
    "16": "./images/PasswordsExtensionIcon_16.png",
    "32": "./images/PasswordsExtensionIcon_32.png",
    "128": "./images/PasswordsExtensionIcon_128.png"
  },
  "permissions": [
    "storage",
    "nativeMessaging",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "optional_permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "options_ui": {
    "page": "./settings.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "password-manager-firefox-extension@apple.com"
    }
  }
}
